{
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npm run storybook",
    "browser-sync": "browser-sync start --proxy localhost:6006",
    "bootstrap": "lerna bootstrap --hoist",
    "clean:lock": "rimraf ./packages/**/package-lock.json",
    "clean:modules": "rimraf ./packages/**/node_modules",
    "clean:lib": "rimraf ./packages/**/lib",
    "clean:all": "npm run clean:lock && npm run clean:modules && npm run clean:lib",
    "test": "jest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "packages:build": "parcel build ./packages/*",
    "packages:watch": "parcel watch ./packages/*",
    "packages:check": "lerna run check",
    "publish": "npm run packages:build && npm run packages:check && lerna publish --ignore-prepublish"
  },
  "author": "Michael Riezler <michael@riezler.co> (https://riezler.co)",
  "license": "MPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@parcel/packager-ts": "^2.8.1",
    "@parcel/transformer-typescript-types": "^2.8.1",
    "@storybook/addon-actions": "^7.0.0-beta.13",
    "@storybook/addon-essentials": "^7.0.0-beta.13",
    "@storybook/addon-interactions": "^7.0.0-beta.13",
    "@storybook/addon-links": "^7.0.0-beta.13",
    "@storybook/react": "^7.0.0-beta.13",
    "@storybook/react-vite": "^7.0.0-beta.13",
    "@storybook/react-webpack5": "^7.0.0-beta.13",
    "@storybook/testing-library": "^0.0.14-next.0",
    "@swc/core": "^1.3.4",
    "@swc/jest": "^0.2.23",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.168",
    "@types/styled-components": "^5.1.26",
    "babel-loader": "^8.2.5",
    "browser-sync": "^2.26.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lerna": "^5.6.2",
    "lightningcss": "^1.16.0",
    "open-props": "^1.4.16",
    "parcel": "^2.8.1",
    "phosphor-react": "^1.4.1",
    "rimraf": "^3.0.2",
    "storybook": "^7.0.0-beta.13",
    "storybook-css-modules": "^1.0.8",
    "ts-jest": "^29.0.3",
    "typescript": "~4.7"
  },
  "dependencies": {
    "@emotion/css": "^11.10.5",
    "@emotion/react": "^11.10.5",
    "@storybook/builder-vite": "^7.0.0-beta.13",
    "@types/css-modules": "^1.0.2",
    "@types/react": "18",
    "@types/react-dom": "18",
    "@types/react-router-dom": "^5.1.6",
    "react": "18",
    "react-dom": "18",
    "styled-components": "^5.3.6"
  }
}
